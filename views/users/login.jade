extends ../layout

block content
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(action="/auth/login", method="post")
        br
        .form-group
            label(for="email") Email:
            input.form-control(name="email", type="email")

        .form-group
            label(for="password") Password:
            input.form-control(name="password", type="password")

        input.btn.btn-default(type="submit", class="btn", name="submit", value="Login")

        p 
            a(href="/auth/forgot" class="forgot") Forgot Password?
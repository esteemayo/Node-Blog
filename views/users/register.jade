extends ../layout

block content
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(action="/users/register", method="post")
        br
        .form-group
            label(for="firstName") First Name:
            input.form-control(name="firstName", type="text")

        .form-group
            label(for="lastName") Last Name:
            input.form-control(name="lastName", type="text")

        .form-group
            label(for="email") Email:
            input.form-control(name="email", type="email")

        .form-group
            label(for="password") Password:
            input.form-control(name="password", type="password")

        .form-group
            label(for="confirm") Confirm Password:
            input.form-control(name="confirm", type="password")

        input.btn.btn-default(type="submit", class="btn", name="submit", value="Register")

extends layout

block content
    .post
        h1= post.title
        p.meta Posted in 
            a(href=`/categories/show/${post.category}`)= `${post.category} by ${post.author.firstName} ${post.author.lastName} â†’ ${h.moment(post.date).fromNow()}`
            img(src=`/images/posts/${post.image}` alt=post.title) 
            !=post.body
            br
            hr
            if post.comments
                h3 Comments
                    each comment in post.comments
                        .comment
                            p.comment-name= comment.name
                            p.comment-body= comment.body
                    br
                    hr
                h3 Add Comment
                if errors
                    ul.errors
                        each error in errors
                            li.alert.alert-danger #{error.msg}
                form.comment-form(method="POST" action=`/posts/addcomment/${post._id}`)
                    .form-group
                        label(for="name") Name
                        input.form-control(type="text" id="name" name="name")
                    
                    .form-group
                        label(for="email") Email
                        input.form-control(type="email" id="email" name="email")

                    .form-group
                        label(for="body") Body
                        textarea.form-control(name="body" id="body")

                    br
                    input.btn.btn-default(type="submit" name="submit" value="Add Comment")


extends ../layout

block content
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(method="POST")
        br
        .form-group
            label(for="password") Password:
            input.form-control(name="password" id="password" type="password" placeholder="********" autofocus)

        .form-group
            label(for="confirm") Confirm Password:
            input.form-control(name="confirm" id="confirm" type="password" placeholder="********")

        input.btn.btn-default(type="submit" class="btn" name="submit" value="Reset Password")